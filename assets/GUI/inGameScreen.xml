<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="ingame" controller="fr.miage.atlantis.gui.controllers.GuiController">
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Layer principal -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="background" childLayout="horizontal">
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Panel de gauche de l'ecran ou l'on place les boutons   -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="panelGauche" height="100%" width="20%" align="left" valign="top" backgroundColor="#00000080" childLayout="vertical" visibleToMouse="true">                
                                
                <panel id="optiongamezone" paddingTop="20%" align="center" height="8%" width="60%" backgroundColor="#00000080" childLayout="vertical" visibleToMouse="true">                
                    <control paddingTop="10%" id="btnOptions"   height="100%" width="100%" name="button" label="Options">
                        <interact onClick="optionsGame()" />
                    </control>
                </panel>
                
            </panel>
      
            <panel id="panelDroit" height="100%" width="80%" align="right" valign="top" childLayout="center" visibleToMouse="true">
                
                <panel id="haut" height="3%" width="100%" align="right" valign="top" backgroundColor="#00000080" childLayout="horizontal" visibleToMouse="true">
                    
                </panel> 
                        
                
                <panel id="bas" height="80%" width="100%" align="left" valign="top" paddingTop="3.7%"  childLayout="horizontal" visibleToMouse="true"> 
                   
                    <panel id="bas_1" height="100%" width="24%" backgroundColor="#0060ab4d" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                        <panel id="haut_1"  height="25%" width="80%" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                            <text align="center" text="${CALL.getPlayerName(0)}" font="Fonts/sansitc.fnt"  color="#0060abff" /> 
                           
                        </panel> 
                    
                    </panel>                    
                    
                    <panel id="spacer_1" height="100%" width="1%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                    
                    <panel id="bas_2" height="100%" width="24%"  backgroundColor="#349b144d" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                        <panel id="haut_2"  height="25%" width="80%" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                            <text align="center"  text="${CALL.getPlayerName(1)}" font="Fonts/sansitc.fnt"  color="#349b14ff" /> 
                            
                        </panel> 
                    </panel> 
                    
                    <panel id="spacer_2" height="100%" width="1%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                    
                    <panel id="bas_3" height="100%" width="24%"  backgroundColor="#eda0004d" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                        <panel id="haut_3" height="25%" width="80%" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                            <text  align="center" text="${CALL.getPlayerName(2)}" font="Fonts/sansitc.fnt"  color="#eda000ff" /> 
                           
                        </panel> 
                    </panel> 
                                        
                    <panel id="spacer_3" height="100%" width="1%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                    
                    <panel id="bas_4" height="100%" width="24%" align="right" backgroundColor="#c6000b4d" valign="top" childLayout="vertical" visibleToMouse="true">
                        <panel id="haut_4" height="25%" width="80%" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                            <text  align="center" text="${CALL.getPlayerName(3)}" font="Fonts/sansitc.fnt"  color="#c6000bff" /> 
                            
                        </panel> 
                    </panel> 
                    
                    <panel id="spacer_4" height="100%" width="2%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                </panel>   
                <panel id="barreDuBas" height="20%" width="100%" align="left" valign="bottom" backgroundColor="#00000080" childLayout="vertical" visibleToMouse="true">                
                    <text align="left" valign="bottom" text="Parfois quand je m'ennuie je vais dans le jardin, " font="Fonts/sansitc.fnt"  color="#ffffffff" /> 
                    <text align="left" valign="bottom" text="me couvre de terre et je me prends pour une carotte." font="Fonts/sansitc.fnt"  color="#ffffffff" />                 
                </panel>  
            </panel>            
             
        </layer>
    </screen>
</nifty>
