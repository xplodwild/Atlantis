                    </control>
                </panel>
                
                <panel id="padding" paddingTop="20%" align="center" height="8%" width="60%"hildLayout="vertical" visibleToMouse="true">                
                    
                </panel>
                
                <panel id="exitgamezone" paddingTop="20%" align="center" height="8%" width="60%"  childLayout="vertical" visibleToMouse="true">                
                    <control paddingTop="10%" id="btnExit"   height="100%" width="100%" name="button" label="Quitter">
