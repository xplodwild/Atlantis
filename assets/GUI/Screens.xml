                        </panel> 
                    </panel> 
                    
                    <panel id="spacer_2" height="100%" width="1%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                    
                    <panel id="bas_3" height="100%" width="24%"  backgroundColor="#eda0004d" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                        <panel id="haut_3" height="25%" width="80%" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                            <text  align="center" text="Joueur 3" font="Fonts/sansitc.fnt"  color="#eda000ff" /> 
                           <text id="nomJ3"   textHAlign="left" textVAlign="center" align="left" valign="center" text="" font="Fonts/sansitc.fnt"  color="#eeeeeeff" /> 
                            <!-- Ajouter une checkbox qui valide si un pseudo a été entré. -->
                        </panel> 
                    </panel> 
                                        
                    <panel id="spacer_3" height="100%" width="1%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                    
                    <panel id="bas_4" height="100%" width="24%" align="right" backgroundColor="#c6000b4d" valign="top" childLayout="vertical" visibleToMouse="true">
                        <panel id="haut_4" height="25%" width="80%" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                            <text  align="center" text="Joueur 4" font="Fonts/sansitc.fnt"  color="#ff2222ff" /> 
                            <text id="nomJ4"  textHAlign="left" textVAlign="center" align="left" valign="center" text="" font="Fonts/sansitc.fnt"  color="#eeeeeeff" /> 
                            <!-- Ajouter une checkbox qui valide si un pseudo a été entré. -->
                        </panel> 
                    </panel> 
                    
                    <panel id="spacer_4" height="100%" width="2%"  backgroundColor="#00000080" align="right" valign="top" childLayout="vertical" visibleToMouse="true">
                    </panel> 
                </panel>   
                <panel id="barreDuBas" height="20%" width="100%" align="left" valign="bottom" backgroundColor="#00000080" childLayout="vertical" visibleToMouse="true">                
                    <text align="left" valign="bottom" text="Parfois quand je m'ennuie je vais dans le jardin, " font="Fonts/sansitc.fnt"  color="#ffffffff" /> 
